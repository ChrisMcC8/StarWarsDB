<p style="color: green"><%= notice %></p>

<br>

<p class="title is-1 is-spaced">Planets</p>


<h3>Search for Planets: </h3>
  <%= form_tag(planets_path, method: :get) do %>
    <%= text_field_tag( :search, params[:search]) %>
    <%= submit_tag("Search") %>
  <% end %>

<table class="table">
  <thead>
    <tr>
      <th>Name:</th>
      <th>Diameter:</th>
      <th>Population:</th>
    </tr>
  </thead>
  <tbody>
  <div id="planets">
    <% @planets.each do |planet| %>
    <tr>
      <th><%= link_to planet.name, planet%></th>
      <th><%=  planet.diameter %></th>
      <th><%=  planet.population %></th>
    </tr>
    <% end %>
  </tbody>
</table>